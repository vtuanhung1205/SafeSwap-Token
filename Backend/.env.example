# Environment Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/safeswap_db
DB_NAME=safeswap_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_strong
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# External API Keys (Optional for demo)
COINGECKO_API_KEY=
COINMARKETCAP_API_KEY=

# Demo Configuration
DEMO_MODE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Aptos Configuration
APTOS_NETWORK=testnet
APTOS_NODE_URL=https://testnet.aptoslabs.com/v1

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@safeswap.com

# Security
BCRYPT_ROUNDS=12

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=60000
